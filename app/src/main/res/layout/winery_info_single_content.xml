<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/winery_info_single_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/winery_info_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/winery_info_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/winery_info_content_title"
            android:gravity="fill_horizontal"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/winery_info_content_view_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/winery_info_content_text"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/winery_info_activity_view_more"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold|italic"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>

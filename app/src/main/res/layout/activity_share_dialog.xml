<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_share_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.tagtalk.winemate.ShareDialogActivity">

    <LinearLayout
        android:id="@+id/share_dialog_activity_share_to_wechat_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/share_dialog_activity_share_to_wechat_friends_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/wechat_icon"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/share_dialog_activity_share_to_wechat_friends_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_dialog_activity_wechat_friends"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/share_dialog_activity_share_to_wechat_moments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/share_dialog_activity_share_to_wechat_friends"
        android:layout_toRightOf="@+id/share_dialog_activity_share_to_wechat_friends"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/share_dialog_activity_share_to_wechat_moments_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/wechat_moment_icon"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/share_dialog_activity_share_to_wechat_friends_moments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_dialog_activity_wechat_moments"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/share_dialog_activity_share_to_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/share_dialog_activity_share_to_wechat_moments"
        android:layout_toRightOf="@+id/share_dialog_activity_share_to_wechat_moments"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/share_dialog_activity_share_to_others_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:src="@drawable/ic_more_horiz_black_48px"/>

        <TextView
            android:id="@+id/share_dialog_activity_share_to_others_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_dialog_activity_others"/>
    </LinearLayout>

    <Button
        android:id="@+id/share_dialog_activity_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/share_dialog_activity_share_to_others"
        android:background="@android:color/transparent"
        android:textColor="@color/colorPrimary"
        android:text="@string/cancel"/>

</RelativeLayout>

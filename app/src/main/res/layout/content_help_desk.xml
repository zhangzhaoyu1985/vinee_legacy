<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.tagtalk.winemate.HelpDeskActivity"
    tools:showIn="@layout/activity_help_desk">

    <EditText
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_shadow_round"
        android:hint="@string/help_desk_activity_contact_name_hint"
        android:inputType="textPersonName|textCapWords"
        android:maxLength="40"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="0dp"
        android:paddingEnd="0dp"
        android:textColorHint="#BDBDBD"/>

    <EditText
        android:id="@+id/contact_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/contact_name"
        android:background="@drawable/edit_text_shadow_round"
        android:hint="@string/help_desk_activity_contact_phone_hint"
        android:inputType="phone"
        android:maxLength="40"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="0dp"
        android:paddingEnd="0dp"
        android:textColorHint="#BDBDBD"/>

    <EditText
        android:id="@+id/contact_message"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/contact_button"
        android:layout_below="@+id/contact_phone"
        android:background="@drawable/edit_text_shadow_round"
        android:hint="@string/help_desk_activity_contact_message_hint"
        android:inputType="textMultiLine"
        android:breakStrategy="balanced"
        android:gravity="top"
        android:maxLength="1000"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="0dp"
        android:paddingEnd="0dp"
        android:textColorHint="#BDBDBD"/>

    <Button
        android:id="@+id/contact_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="@string/help_desk_activity_submit_button_text"
        android:textColor="#fff" />

</RelativeLayout>
